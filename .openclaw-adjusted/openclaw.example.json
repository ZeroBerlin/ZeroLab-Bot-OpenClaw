{
  // --- Metadaten ---
  "meta": {
    "lastTouchedVersion": "2026.2.12"
  },

  // --- Nachrichten-Verhalten ---
  "messages": {
    "ackReactionScope": "group-mentions"
  },

  // --- KI-Modelle & Provider ---
  "models": {
    "providers": {
      "google": {
        "baseUrl": "https://generativelanguage.googleapis.com",
        // WICHTIG: API-Key wird sicher aus der .env-Datei geladen
        "apiKey": "${GOOGLE_API_KEY}",
        "models": [
          {
            "id": "gemini-2.5-flash",
            "name": "Gemini 2.5 Flash",
            "contextWindow": 200000
          }
        ]
      }
    }
  },

  // --- Agenten-Konfiguration ---
  "agents": {
    "defaults": {
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      },
      "compaction": {
        "mode": "safeguard",
        "memoryFlush": { "enabled": true }
      },
      "workspace": "/root/.openclaw/workspace",
      "model": {
        // 1. Primaeres LLM Google Gemini (kostenlos)
        "primary": "google/gemini-2.5-flash",
        // 2. Fallback auf Anthropic Claude, wenn Google limitiert ist
        "fallbacks": [
          "anthropic/claude-sonnet-4-5"
        ]
      },
      // NEU: Sandbox deaktivieren
      // Dadurch laeuft ZeroLab direkt als "root" auf dem Ubuntu LXC-Host
      "sandbox": {
        "mode": "off"
      }
    }
  },

  // --- Werkzeug-Richtlinien (Terminal-Kontrolle) ---
  "tools": {
    "exec": {
      // Erlaubt das Ausfuehren aller Befehle auf dem Host ohne Whitelist-Pruefung
      "security": "full",
      // Schaltet die interaktive Nachfrage ab (Gibt dem Agenten volle Autonomie)
      "ask": "off"
    }
  },

  // --- Gateway (Web-UI & Netzwerk) ---
  "gateway": {
    "port": 18789,
    "mode": "local",
    // "lan" macht das Dashboard im gesamten Heimnetzwerk erreichbar
    "bind": "lan",
    "auth": {
      "mode": "password",
      // WICHTIG: Passwort wird sicher aus der .env-Datei geladen
      "password": "${OPENCLAW_GATEWAY_PASSWORD}"
    },
    "controlUi": {
      // Erlaubt lokalen HTTP-Zugriff im Heimnetzwerk (ohne HTTPS/Tailscale)
      "allowInsecureAuth": true
    },
    "tailscale": {
      "mode": "off",
      "resetOnExit": false
    }
  },

  // --- Authentifizierungsprofile ---
  "auth": {
    "profiles": {
      "google:default": {
        "provider": "google",
        "mode": "api_key"
      }
    }
  },

  // --- Plugins ---
  "plugins": {
    "entries": {
      "whatsapp": {
        "enabled": true
      }
    }
  },

  // --- Messenger-Kanaele ---
  "channels": {
    "whatsapp": {
      "selfChatMode": true,
      "dmPolicy": "allowlist",
      "responsePrefix": "[ZeroLab] ",
      "allowFrom": [
        // WICHTIG: Eigene Telefonnummer wird sicher aus der .env-Datei geladen
        "${MY_PHONE_NUMBER}"
      ]
    }
  },

  // --- Hooks (Hintergrund-Automatisierungen) ---
  "hooks": {
    "internal": {
      "enabled": true,
      "entries": {
        // Meldet sich automatisch nach einem Neustart (BOOT.md)
        "boot-md": {
          "enabled": true
        },
        // Flugschreiber: Protokolliert alle Admin-Befehle
        "command-logger": {
          "enabled": true
        },
        // Episodisches Gedaechtnis: Schreibt Zusammenfassungen bei /new
        "session-memory": {
          "enabled": true
        }
      }
    }
  }
}